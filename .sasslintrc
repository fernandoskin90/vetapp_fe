{
    "options": {
        "merge-default-rules": false
    },
    "files": {
        "ignore": "node_modules/*",
        "include": "src/**/*.scss"
    },
    "rules": {
        "extends-before-mixins": 2,
        "extends-before-declarations": 2,
        "mixins-before-declarations": [
            2,
            {
                "exclude": [
                    "breakpoint",
                    "mq"
                ]
            }
        ],
        "no-warn": 1,
        "no-debug": 1,
        "no-ids": 2,
        "no-important": 2,
        "hex-notation": [
            2,
            {
                "style": "uppercase"
            }
        ],
        "indentation": [
            2,
            {
                "size": 2
            }
        ]
    }
}
